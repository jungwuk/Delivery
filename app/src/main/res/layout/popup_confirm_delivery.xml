<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:orientation="vertical">
    <!--
    여기는 디자인이 버튼과 제목부분이 변경
-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="#f9f9f9"
            android:orientation="vertical">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/box_gray_bottom"
                android:gravity="center"
                android:padding="15dp"
                android:text="배송 출발"
                android:textSize="20dp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="배송을 출발하시겠습니까?"
                android:textSize="18dp"
                android:textColor="#555"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/popup_confirm_delivery_ok"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/solid_green_box"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:text="확인"
                    android:textColor="#FFF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/popup_confirm_delivery_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/box_green_0radi"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="취소"
                    android:textColor="#0bd438"
                    android:textSize="20dp" />


            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>